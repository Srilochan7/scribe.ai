{
  "manifest_version": 3,
  "name": "scribe-ai",
  "version": "1.0",
  "description": "AI-powered Google Meet summarizer - Records and uploads audio for transcription and summarization",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabCapture",
    "offscreen"
  ],
  "minimum_chrome_version": "109",
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recording-injected.js"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}
