{
  "manifest_version": 3,
  "name": "Scribe-ai",
  "version": "1.0",
  "description": "AI-powered Google Meet summarizer - Records and uploads audio for transcription and summarization",
  "permissions": [
    "activeTab",
    "scripting",
    "tabCapture"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recording-injected.js"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}